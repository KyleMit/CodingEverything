    display: flex;
    margin-top: 1rem;
}

.theme-picker pre {
    margin: 0;
    flex-grow: 1;
}

.themes {
    display: flex;
    flex-direction: column;
    margin-right: 1rem;
}
.themes label {
    cursor: pointer;
}

.themes .opt-group ol {
    margin-left: 1rem;
}

