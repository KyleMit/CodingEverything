<style type="text/css">
.settings .display-toggle {
  float: none;
}

/* site theme */

.settings-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.site-theme-system {
    display: flex;
    align-items: center;
    margin-top: 1em;
    margin-left: 2em;
}

.site-theme-system > label {
    display: flex;
    align-items: center;
}
.site-theme-system .display-toggle-group label:first-child svg {
    border-right: none;
}
#system-theme-current {
    margin-left: 5px;
}


